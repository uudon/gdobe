<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item> <!--去掉系统自带的actionbar-->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item> <!--toolbar背景颜色-->
        <item name="colorPrimaryDark">@color/colorPrimary</item> <!--状态栏颜色-->
        <item name="android:windowBackground">@color/colorPageBg</item> <!--内容颜色-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <!--titleBar样式-->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
